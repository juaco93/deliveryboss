<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/nest_scrollview"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.deliveryboss.app.ui.DetalleEmpresa"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deliveryboss.app.ui.DetalleEmpresa">

    <android.support.v7.widget.CardView
        android:id="@+id/cvCalificacion"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtNombreEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Empresa"
                android:textAppearance="@android:style/TextAppearance.Material.Medium" />

            <TextView
                android:id="@+id/lbRubroElegido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombreEmpresa"
                android:layout_marginLeft="15dp"
                android:padding="5px"
                android:text="Pizzas, Empanadas, Sanguches"
                android:textAppearance="@android:style/TextAppearance.Material.Small" />

            <RelativeLayout
                android:id="@+id/LOCalificacion1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/lbRubroElegido"
                >
            <TextView
                android:id="@+id/lbCalificacion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/colorEstrellas"
                android:padding="5px"
                android:paddingEnd="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingStart="4dp"
                android:text="4.1"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbVelocidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbCalificacion1"
                    android:padding="5px"
                    android:text="Velocidad"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LOCalificacion2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/LOCalificacion1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_below="@+id/lbRubroElegido"
                >
            <TextView
                android:id="@+id/lbCalificacion2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorEstrellas"
                android:layout_centerHorizontal="true"
                android:padding="5px"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="4.1"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/lbProductos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbCalificacion2"
                    android:padding="5px"
                    android:text="Productos"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textSize="12sp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/LOCalificacion3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/LOCalificacion2"
                android:layout_below="@+id/lbRubroElegido"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                >

            <TextView
                android:id="@+id/lbCalificacion3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorEstrellas"
                android:padding="5px"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="4.1"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />

                <TextView
                    android:id="@+id/lbAtencion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbCalificacion3"
                    android:padding="5px"
                    android:text="Atención"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LOCalificacionGeneral"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/LOCalificacion3"
                android:layout_below="@+id/lbRubroElegido"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"

                >
            <TextView
                android:id="@+id/lbCalificacionFloat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorMercado"
                android:padding="5px"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingEnd="4dp"
                android:paddingStart="4dp"
                android:text="4.1"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/lbGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbCalificacionFloat"
                android:padding="5px"
                android:text="General"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/lbCantidadCalificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5px"
                android:text="(110)"
                android:textSize="18sp"
                android:layout_marginRight="17dp"
                android:layout_marginEnd="17dp"
                android:layout_alignTop="@+id/LOCalificacionGeneral"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cvUbicacion"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/cvCalificacion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/lbUbicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Ubicación"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="50dp" />


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cvHorarios"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cvUbicacion"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/lbHorarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Horarios"
            android:textAppearance="@android:style/TextAppearance.Material.Medium" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="44dp"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbLunes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:text="  Lunes"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtLunes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5px"
                    android:text="Cerrado"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbMartes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:text="  Martes"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtMartes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5px"
                    android:text="Cerrado"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbMiercoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:text="  Miercoles"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtMiercoles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5px"
                    android:text="Cerrado"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbJueves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:text="  Jueves"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtJueves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5px"
                    android:text="Cerrado"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbViernes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:text="  Viernes"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtViernes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5px"
                    android:text="Cerrado"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbSabado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:text="  Sabado"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtSabado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5px"
                    android:text="Cerrado"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbDomingo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:text="  Domingo"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtDomingo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5px"
                    android:text="Cerrado"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbFeriados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5px"
                    android:text="  Feriados"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtFeriados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="5px"
                    android:text="Cerrado"
                    android:textAlignment="viewEnd"
                    android:textSize="14sp" />
            </TableRow>

        </TableLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cvDelivery"
        android:layout_width="fill_parent"
        android:layout_height="140dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/cvHorarios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/lbDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Delivery"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            />

        <TextView
            android:id="@+id/txtDeliveryORetiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5px"
            android:text="Precio: $30"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:layout_below="@+id/lbDelivery"
            android:layout_alignLeft="@+id/lbDelivery"
            android:layout_alignStart="@+id/lbDelivery" />

            <TextView
                android:id="@+id/txtDemora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5px"
                android:text="Tiempo: 30-60min"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:layout_below="@+id/txtDeliveryORetiro"
                android:layout_alignLeft="@+id/txtDeliveryORetiro"
                android:layout_alignStart="@+id/txtDeliveryORetiro" />

            <TextView
                android:id="@+id/txtInfoCompraMinima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5px"
                android:text="Compra minima: $100"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                android:layout_below="@+id/txtDemora"
                android:layout_alignLeft="@+id/txtDemora"
                android:layout_alignStart="@+id/txtDemora" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>

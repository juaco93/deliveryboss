<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/txtDireccionNombreCalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="Elisa de Quiroga" />

        <TextView
            android:id="@+id/txtDireccionNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtDireccionNombreCalle"
            android:layout_alignStart="@+id/txtDireccionNombreCalle"
            android:layout_below="@+id/txtDireccionNombreCalle"
            android:text="806" />

        <TextView
            android:id="@+id/txtDireccionHabitacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Piso 7"
            android:layout_toRightOf="@+id/txtDireccionNumero"
            android:layout_alignBaseline="@+id/txtDireccionNumero"
            />


        <TextView
            android:id="@+id/txtDireccionBarrio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtDireccionNombreCalle"
            android:layout_alignStart="@+id/txtDireccionNombreCalle"
            android:layout_below="@+id/txtDireccionNumero"
            android:text="BÂ° 25 de Mayo Sur" />


        <TextView
            android:id="@+id/txtDireccionCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtDireccionNombreCalle"
            android:layout_alignStart="@+id/txtDireccionNombreCalle"
            android:layout_below="@+id/txtDireccionBarrio"
            android:text="La Rioja" />

        <View
            android:id="@+id/horizontal_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txtDireccionCiudad"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/horizontal_separator"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/txtDireccionEliminar"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELIMINAR"
            android:textAppearance="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColorLink="@color/cardview_shadow_start_color"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDireccionModificar"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MODIFICAR"
            android:textAppearance="@style/Base.Widget.AppCompat.Button.Borderless"
            android:textColorLink="@color/cardview_shadow_start_color"
            android:textSize="11sp"
            android:textStyle="bold" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cbDireccionPorDefecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/txtDireccionNombreCalle" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
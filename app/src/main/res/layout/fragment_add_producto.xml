<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bodegaslarioja.app.ui.CalificacionDialogFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtDialogoNombreProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Pizza especial"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textStyle="bold" />

        <NumberPicker
            android:id="@+id/npCantidadProducto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDialogoNombreProducto"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/npCantidadProducto"
            android:layout_centerHorizontal="true"
            android:paddingBottom="30dp">

            <Button
                android:id="@+id/btnDialogoAceptar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/colorPrimaryDark"
                android:elevation="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Aceptar"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/btnDialogoCancelar"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/btnDialogoAceptar"
                android:backgroundTint="@color/colorPrimaryDark"
                android:elevation="10dp"
                android:text="Cancelar"
                android:textColor="@color/cardview_light_background"
                android:textColorLink="@color/colorPrimaryDark" />
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>

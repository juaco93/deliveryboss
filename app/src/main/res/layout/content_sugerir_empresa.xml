<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:paddingTop="20dp"
        android:id="@+id/sugerirEmpresa_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/lbTipoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de usuario"
            android:textColor="@color/colorTextoBoton" />

        <Spinner
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/spSETipoSugerencia"
            >

        </Spinner>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbSENombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTextoBoton">

                <EditText
                    android:id="@+id/txtSENombre"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:textColor="@color/colorTextoBoton"
                    android:textColorHint="@color/colorTextoBoton" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/lbSEApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorTextoBoton">

                <EditText
                    android:id="@+id/txtSEApellido"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="163dp"
                    android:hint="Apellido"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:textColor="@color/colorTextoBoton"
                    android:textColorHint="@android:color/white" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbSEEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorTextoBoton">

            <EditText
                android:id="@+id/txtSEEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorTextoBoton"
                android:textColorHint="@color/colorTextoBoton" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbSETelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorTextoBoton"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/txtSETelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefono"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorTextoBoton"
                android:textColorHint="@color/colorTextoBoton" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbSENombreEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorTextoBoton"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/txtSENombreEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre Empresa"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorTextoBoton"
                android:textColorHint="@color/colorTextoBoton" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbSEDireccionEmpresa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorTextoBoton"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/txtSEDireccionEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Direccion Empresa"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorTextoBoton"
                android:textColorHint="@color/colorTextoBoton" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lbSECiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorTextoBoton"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/txtSECiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ciudad"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorTextoBoton"
                android:textColorHint="@color/colorTextoBoton" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btnSugerirEmpresa"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/altura_boton"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorBotonNaranja"
            android:text="Sugerir empresa"
            android:textAllCaps="false"
            android:textColor="@color/colorTextoBoton"
            android:textSize="@dimen/size_texto_boton" />
    </LinearLayout>
</LinearLayout>
